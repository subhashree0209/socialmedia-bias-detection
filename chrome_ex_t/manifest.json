
{
  "manifest_version": 3,
  "name": "Reddit Bias Detector",
  "version": "1.0",
  "description": "Detects potential bias in Reddit posts and comments",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.reddit.com/*",
    "http://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "background.js"  
  },
  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/extension_logo.png",
      "48": "images/main_logo.png",
      "128": "images/Bias_Detector.png"
    }
  },
  "icons": {
    "16": "images/extension_logo.png",
    "48": "images/main_logo.png",
    "128": "images/Bias_Detector.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sounds/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}